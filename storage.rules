rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Carpeta "uploads"
    match /uploads/{allPaths=**} {
      // Cualquiera puede leer im√°genes (ej: screenshots de nades)
      allow read: if true;

      // Solo usuarios autenticados pueden subir/borrar
      allow write: if request.auth != null;
    }
  }
}
